  
primary-color = hsl(30, 100%, 47%)
  
*
    box-sizing border-box
  
body
    background-color primary-color
    color white
    font-family "Open Sans", sans-serif
    
header
  width 400px
  margin 0 auto 20px auto
  text-align center
    
.players
    display flex
    flex-direction row
    align-items center
    justify-content center
    
    .player
        width 200px
        border 4px white solid
        border-radius 4px
        padding 10px 0px
        text-align center
        margin 0 10px

        h2
            padding 0
            margin 30px 0 20px 0

        .input
            border solid white
            border-width 0 8px 8px 0
            display inline-block
            padding 3px
            margin 2px 10px
            width 6px
            height 6px
            will-change border
            transition border .4s ease-in-out

            &.pressed
                border-color red
                transition border 0s ease-in-out
                

            &-group
                display flex
                flex-direction row
                align-items center
                justify-content center

            &.right
                transform rotate(-45deg)

            &.left
                transform rotate(135deg)

            &.up
                transform rotate(-135deg)

            &.down
                transform rotate(45deg)

        .sources
            margin 10px 0
            display flex
            flex-direction column
            align-items center
            justify-content center

            input.source[type="radio"]
                position absolute
                visibility hidden
                
            label.source
                margin-top 10px
                background-color primary-color
                color white
                font-weight bold
                font-size 12pt
                padding 5px
                display block
                width 120px
                outline none
                border 3px white solid
                border-radius 3px
                transition background-color .3s ease-in-out, color .3s ease-in-out
                              
                &:hover,
                &:focus
                    color primary-color
                    background-color hsla(0, 100%, 100%, 0.7)

            input.source[type="radio"]:checked + label.source
                color primary-color
                background-color white
